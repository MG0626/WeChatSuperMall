/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  width: 100%;
  display: flex;
  height: 88rpx;
  align-items: center;
  background-color: #fff;
}
.tab-control .tab-control-item{
  flex: 1;
  text-align: center;
}

.active{
  color: #ff5777;
}
.active > text {
  border-bottom: 6rpx solid #ff5777;
}